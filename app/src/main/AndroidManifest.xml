<?xml version="1.0" encoding="utf-8"?>
<!--
    AndroidManifest.xml
    Declares features, permissions, and activities.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs360.project2">

    <!-- Allow install on devices without telephony radios. -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <!-- Runtime permission is requested in SmsPermissionActivity -->
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project2"
        android:usesCleartextTraffic="false">

        <!-- Launcher: permission screen first-run -->
        <activity
            android:name=".activity.SmsPermissionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Login: first screen after permission workflow -->
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false" />

        <!-- Main grid screen. -->
        <activity
            android:name=".activity.DataGridActivity"
            android:exported="false" />
    </application>
</manifest>
